@page "/article/{Id:int}"
@inject ArticleService ArticleService
@inject CartService CartService

<h3>Détail Article</h3>

@if (_article is null)
{
    <p>Chargement...</p>
}
else
{
    <div>
        <h4>@_article.Name</h4>
        <p>@_article.Description</p>
        <strong>@_article.Price DT</strong>
        <div class="mt-3">
            <input type="number" min="1" @bind="_quantity" />
            <button class="btn btn-success" @onclick="AddToCart">Ajouter au panier</button>
        </div>
        @if (!string.IsNullOrWhiteSpace(_message))
        {
            <p class="mt-2">@_message</p>
        }
    </div>
}

@code {
    [Parameter] public int Id { get; set; }
    private MonResto.BlazorClient.Models.ArticleModel? _article;
    private int _quantity = 1;
    private string _message = string.Empty;

    protected override async Task OnParametersSetAsync()
    {
        _article = await ArticleService.GetArticle(Id);
    }

    private async Task AddToCart()
    {
        var result = await CartService.AddToCart(Id, _quantity);
        _message = result.Success
            ? "Article ajouté au panier"
            : (string.IsNullOrWhiteSpace(result.Error)
                ? "Impossible d'ajouter l'article."
                : result.Error);
    }
}
