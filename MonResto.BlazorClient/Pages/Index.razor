    </div>
    <div class="col-12 col-lg-5">
        <div class="cart-preview h-100">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <h5 class="mb-0">Mon panier</h5>
                <span class="badge bg-light text-dark">Aper√ßu</span>
            </div>
            @if (_cartItems is null)
            {
                <p>Chargement du panier...</p>
            }
            else if (!_cartItems.Any())
            {
                <p class="mb-0">@(_cartMessage ?? "Votre panier est vide. Commencez par ajouter quelques plats !")</p>
            }
            else
            {
                @foreach (var item in _cartItems)
                {
                    <div class="cart-item-row d-flex justify-content-between align-items-center py-2">
                        <div>
                            <div class="fw-bold">@item.ArticleName</div>
                            <div class="text-muted">@item.Quantity x @item.Price DT</div>
                        </div>
                        <div class="fw-bold">@(item.Price * item.Quantity) DT</div>
                    </div>
                }
                <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top border-secondary-subtle">
                    <span>Total</span>
                    <strong>@_cartItems.Sum(i => i.Price * i.Quantity) DT</strong>
                </div>
                <div class="d-flex gap-2 mt-3">
                    <button class="btn btn-light flex-fill" @onclick='() => Nav.NavigateTo("/cart")'>Ajuster</button>
                    <button class="btn btn-warning text-dark flex-fill" @onclick='() => Nav.NavigateTo("/orders")'>Commander</button>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private IEnumerable<MonResto.BlazorClient.Models.CategoryModel>? _categories;
    private IEnumerable<MonResto.BlazorClient.Models.CategoryModel>? _filteredCategories;
    private IEnumerable<MonResto.BlazorClient.Models.ArticleModel>? _popular;
    private List<MonResto.BlazorClient.Models.CartItemModel>? _cartItems;
    private string? _cartMessage;
    private string _categorySearchTerm = string.Empty;
    private string CategorySearchTerm
    {
        get => _categorySearchTerm;
        set
        {
            _categorySearchTerm = value;
            ApplyCategoryFilter();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        _categories = await CategoryService.GetCategories();
        _filteredCategories = _categories;
        _popular = (await ArticleService.GetArticles()).Take(5);
        var cart = await CartService.GetCart();
        _cartMessage = cart.Error;
        _cartItems = cart.Items.ToList();
    }

    private void ApplyCategoryFilter()
    {
        if (_categories is null)
        {
            _filteredCategories = null;
            return;
        }

        var term = _categorySearchTerm?.Trim();
        if (string.IsNullOrWhiteSpace(term))
        {
            _filteredCategories = _categories;
            return;
        }

        _filteredCategories = _categories.Where(category =>
            (!string.IsNullOrWhiteSpace(category.Name) && category.Name.Contains(term, StringComparison.OrdinalIgnoreCase)) ||
            (!string.IsNullOrWhiteSpace(category.Description) && category.Description.Contains(term, StringComparison.OrdinalIgnoreCase))
        );
    }

    private void ClearCategorySearch()
    {
        CategorySearchTerm = string.Empty;
    }
}
