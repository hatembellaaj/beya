@page "/articles"
@page "/articles/{CategoryId:int}"
@inject ArticleService ArticleService
@inject NavigationManager Nav

<div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
    <div>
        <h3 class="mb-0">Articles</h3>
        <p class="text-muted mb-0">@(_subtitle ?? "S√©lectionnez un plat et ajoutez-le √† votre panier.")</p>
    </div>
    <button class="btn btn-outline-secondary" @onclick='() => Nav.NavigateTo("/cart")'>Voir mon panier</button>
</div>

<div class="input-group mb-4">
    <span class="input-group-text bg-white">üîç</span>
    <input class="form-control" placeholder="Rechercher par nom, description ou cat√©gorie"
           @bind="SearchTerm" @bind:event="oninput" />
    <button class="btn btn-outline-secondary" @onclick="ClearSearch" disabled="@string.IsNullOrWhiteSpace(_searchTerm)">Effacer</button>
</div>

@if (_articles is null)
{
    <div class="alert alert-info">Chargement des articles...</div>
}
else if (!_articles.Any())
{
    <div class="alert alert-warning">Aucun article disponible pour cette cat√©gorie.</div>
}
else
{
    <div class="row g-3">
        @foreach (var article in _articles)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card card-tile h-100 p-3 d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="mb-0">@article.Name</h5>
                        <span class="badge bg-primary">@article.Price DT</span>
                    </div>
                    <p class="text-muted-strong mb-3">@article.Description</p>
                    <div class="d-flex align-items-center justify-content-between mt-auto">
                        <span class="chip">@article.CategoryName</span>
                        <button class="btn btn-outline-primary" @onclick='() => Nav.NavigateTo($"/article/{article.ArticleId}")'>D√©tails</button>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    [Parameter] public int? CategoryId { get; set; }
    private IEnumerable<MonResto.BlazorClient.Models.ArticleModel>? _articles;
    private IEnumerable<MonResto.BlazorClient.Models.ArticleModel>? _allArticles;
    private string? _subtitle;
    private string _searchTerm = string.Empty;
    private string SearchTerm
    {
        get => _searchTerm;
        set
        {
            _searchTerm = value;
            ApplyFilter();
        }
    }

    protected override async Task OnParametersSetAsync()
    {
        _allArticles = CategoryId.HasValue
            ? await ArticleService.GetByCategory(CategoryId.Value)
            : await ArticleService.GetArticles();

        _subtitle = CategoryId.HasValue
            ? $"Articles de la cat√©gorie #{CategoryId.Value}"
            : "Tous les plats disponibles";

        ApplyFilter();
    }

    private void ApplyFilter()
    {
        if (_allArticles is null)
        {
            _articles = null;
            return;
        }

        var term = _searchTerm?.Trim();

        if (string.IsNullOrWhiteSpace(term))
        {
            _articles = _allArticles;
            return;
        }

        _articles = _allArticles.Where(article =>
            (!string.IsNullOrWhiteSpace(article.Name) && article.Name.Contains(term, StringComparison.OrdinalIgnoreCase)) ||
            (!string.IsNullOrWhiteSpace(article.Description) && article.Description.Contains(term, StringComparison.OrdinalIgnoreCase)) ||
            (!string.IsNullOrWhiteSpace(article.CategoryName) && article.CategoryName.Contains(term, StringComparison.OrdinalIgnoreCase))
        );
    }

    private void ClearSearch()
    {
        SearchTerm = string.Empty;
    }
}
