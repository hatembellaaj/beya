{
  "info": {
    "name": "MonResto API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/api/account/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userName\": \"qa.user\",\n  \"email\": \"qa.user@example.com\",\n  \"password\": \"Passw0rd!\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Register status', function () {",
                  "  pm.expect(pm.response.code).to.be.oneOf([200, 400]);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/api/account/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userName\": \"qa.user\",\n  \"password\": \"Passw0rd!\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Login status', function () {",
                  "  pm.expect(pm.response.code).to.eql(200);",
                  "});",
                  "if (pm.response.code === 200) {",
                  "  var json = pm.response.json();",
                  "  pm.collectionVariables.set('token', json.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Categories",
      "item": [
        {
          "name": "List categories",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/categories"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Categories list', function () {",
                  "  pm.expect(pm.response.code).to.eql(200);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Create category",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/api/categories",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Desserts QA\",\n  \"description\": \"Sucr√©\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Articles",
      "item": [
        {
          "name": "List articles",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/articles"
          }
        },
        {
          "name": "Search articles",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/articles?name=pizza"
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Get cart",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/api/cart"
          }
        },
        {
          "name": "Cart summary",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/api/cart/summary"
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create order",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/api/order"
          }
        },
        {
          "name": "Order history",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/api/order"
          }
        }
      ]
    }
  ]
}
